
<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :picture_url, "Picture URL" %><br>
    <%= f.text_field :picture_url %>
  </div>
  <div class="field">
    <%= f.label :temple_id, "Temple (Check the box if the item is not acquired in a temple.)" %><br>
    <%= f.select(:temple_id, options_from_collection_for_select(Temple.all, :id, :name)) %>
    <%= f.label :in_temple, "Not In Temple:"%>
    <%= f.check_box :in_temple %>
  </div>
  <div class="field">
    <%= f.label :game_id %><br>
    <%= f.select(:game_id, options_from_collection_for_select(Game.all, :id, :name)) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
